generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id             Int      @id @default(autoincrement())
  username       String
  email          String   @unique
  password       String
  address        String?
  note           String?
  phoneNumber    String?
  profilePitcure String?
  created        DateTime @default(now())
}

model favorite {
  id            Int    @id @default(autoincrement())
  product_id    Int
  account_id    Int
  email         String
  product_name  String
  product_price Int
  product_image String

  @@unique([account_id, product_id])
}

model cart {
  id            Int    @id @default(autoincrement())
  product_id    Int
  account_id    Int
  email         String
  product_image String
  product_name  String
  product_price Int

  @@unique([account_id, product_id])
}

model product {
  id                  Int    @id @default(autoincrement())
  product_name        String
  product_price       Int
  product_description String
  product_images      String
  soldout             Int?
  quantity            Int?
}

model product_images {
  id             Int    @id @default(autoincrement())
  product_id     Int
  product_images String
}

model procces {
  id                  Int    @id @default(autoincrement())
  product_id          Int
  account_id          Int
  email               String
  status              String
  quantity            String
  price               Int
  product_name        String
  product_description String
  product_image       String
}

model comments {
  id         Int      @id @default(autoincrement())
  account_id Int
  product_id Int
  commant_id Int?
  email      String
  comments   String
  love       Boolean?

  @@unique([id, account_id, love])
}
